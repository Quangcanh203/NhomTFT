@model IEnumerable<CategoryModel>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<h3 class="text-center mt-4">Danh sách danh mục</h3>
<div class="mb-3">
    <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Thêm danh mục</a>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Mã</th>
            <th scope="col">Tên danh mục</th>
            <th scope="col">Mô tả danh mục</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm d-inline" asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                    <form asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
                        <button type="submit" class="btn btn-danger btn-sm confirmDeletion">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
