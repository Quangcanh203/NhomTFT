@model CategoryModel

@{
    ViewData["Title"] = "Tạo Danh Mục";
}

<h4 class="mb-4">Tạo Danh Mục Mới</h4>
<div class="col-md-8 mx-auto">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group mb-3">
            <label for="Name" class="form-label">Tên Danh Mục</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Description" class="form-label">Mô Tả</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả danh mục"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label for="Status" class="form-label">Trạng Thái</label>
            <select asp-for="Status" class="form-control">
                <option value="1">Hiển thị</option>
                <option value="0">Ẩn</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-success">Tạo Danh Mục</button>
        </div>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách danh mục</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
