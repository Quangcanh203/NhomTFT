@model BrandModel

@{
    ViewData["Title"] = "Tạo Thương Hiệu";
}

<div class="container mt-5">
    <h4 class="text-center mb-4">Tạo Thương Hiệu</h4>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" class="p-4 border rounded shadow-sm bg-light">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label for="Name" class="form-label">Tên Thương Hiệu</label>
                    <input asp-for="Name" class="form-control" id="Name" placeholder="Nhập tên thương hiệu" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Description" class="form-label">Mô Tả</label>
                    <textarea asp-for="Description" class="form-control" id="Description" placeholder="Nhập mô tả thương hiệu"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Status" class="form-label">Trạng Thái</label>
                    <select asp-for="Status" class="form-control" id="Status">
                        <option value="1">Hiển thị</option>
                        <option value="0">Ẩn</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Tạo</button>
                </div>
            </form>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
