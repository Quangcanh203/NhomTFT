@model IEnumerable<BrandModel>

@{
    ViewData["Title"] = "Danh sách Thương hiệu";
}

<h3 class="text-center mt-4">Danh sách Thương hiệu</h3>
<div class="text-right mb-3">
    <a asp-action="Create" asp-controller="Brand" class="btn btn-primary">Thêm Thương hiệu</a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên Thương hiệu</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Slug</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@item.Slug</td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm d-inline" asp-controller="Brand" asp-route-Id="@item.Id">Edit</a>
                    <form asp-action="Delete" asp-controller="Brand" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa Thương hiệu này?');">
                        <button type="submit" class="btn btn-danger btn-sm confirmDeletion">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
