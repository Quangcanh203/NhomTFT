<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Admin area for managing products, categories, brands, and orders.">
    <meta name="author" content="Your Name">
    <title>@ViewData["Title"] - Admin Area</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        /* CSS tùy chỉnh */
        body {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .header-middle {
            border-bottom: 1px solid #ddd;
        }

        .navbar-nav .nav-item .nav-link {
            color: #495057;
        }

            .navbar-nav .nav-item .nav-link:hover {
                color: #007bff;
            }

        footer {
            background-color: #343a40;
            color: #ffffff;
        }

            footer p {
                margin: 0;
            }
    </style>
</head>

<body>

    <header id="header">
        <!--header-->
        <div class="header_top bg-light py-2">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <!-- Bạn có thể thêm nội dung tùy chọn ở đây -->
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle py-3 bg-light">
            <!--header-middle-->
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="logo">
                        
                    </div>
                    <div class="mainmenu">
                        <ul class="nav">
                            <li class="nav-item">
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product"><i class="fas fa-box-open"></i> Sản Phẩm</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category"><i class="fas fa-list-alt"></i> Danh Sách</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Brand"><i class="fas fa-tags"></i> Thương Hiệu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User"><i class="fas fa-user"></i> Ngươi Dùng</a>
                            </li>
                            
                        </ul>
                    </div>
                    <div class="search_box">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->
    </header><!--/header-->

    <section class="my-5">
        <div class="container">
            <div class="row">
                @Html.Partial("_NotificationPartial")
                @RenderBody()
            </div>
        </div>
    </section>

    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container text-center">
            <p>&copy; Tft đê</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // JS tùy chỉnh
        $(document).ready(function () {
            // Add your custom JS code here
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
