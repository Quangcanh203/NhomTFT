@model AddUserModel

@{
    ViewData["Title"] = "Tạo Người Dùng";
}

<div class="container mt-5">
    <h4 class="text-center mb-4">Tạo Người Dùng</h4>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" class="p-4 border rounded shadow-sm bg-light">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label for="UserName" class="form-label">Tên người dùng</label>
                    <input asp-for="UserName" required class="form-control" id="UserName" placeholder="Nhập tên người dùng" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input asp-for="Email" required class="form-control" id="Email" placeholder="Nhập email người dùng" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="PhoneNumber" required class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Nhập số điện thoại người dùng" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="PasswordHash" required class="form-label">Mật khẩu</label>
                    <input asp-for="PasswordHash" type="password" class="form-control" id="PasswordHash" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Roles" class="form-label">Vai trò</label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>



                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Tạo Người Dùng</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách người dùng</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}