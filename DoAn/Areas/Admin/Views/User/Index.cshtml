

@{
    ViewData["Title"] = "Danh sách Người dùng";
}

<h3 class="text-center mt-4">Danh sách Người dùng</h3>
<div class="text-right mb-3">
    <a asp-action="Create" asp-controller="User" class="btn btn-primary">Thêm người dùng</a>
</div>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Tên người dùng</th>
            <th scope="col">Email</th>
            <th scope="col">Vai trò</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userWithRoles in Model)
        {
            <tr>
                <th scope="row">@userWithRoles.UserName</th>
                <td>@userWithRoles.Email</td>
                <td>@userWithRoles.RoleNames</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm d-inline" asp-controller="User" asp-route-Id="@userWithRoles.Id">Edit</a>
                    <form asp-action="Delete" asp-controller="User" asp-route-id="@userWithRoles.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                        <button type="submit" class="btn btn-danger btn-sm confirmDeletion">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>