@model IEnumerable<ProductModel>

<div class="row">
    <div class="col-sm-3">
        @Html.Partial("_SidebarPartial")
    </div>

    <div class="col-sm-9 padding-right">
        <div class="features_items">
            <!--features_items-->
            <h2 class="title text-center">Featured Items</h2>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
                                    <div class="productinfo text-center">
                                        <img src="~/media/products/@item.Image" alt="@item.Name" width="100%" />
                                        <h2>$@item.Price</h2>
                                        <p>Category: @item.Name</p>
                                        <p>Brand: @item.Brand.Name</p>
                                    </div>
                                </a>
                                <div class="product-action text-center mt-2">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="btn btn-warning add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-secondary" asp-action="Login" asp-controller="Account"><i class="fa fa-sign-in-alt"></i> Login to add to cart</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div><!--features_items-->
    </div>
</div>

